{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 80,
  "singleQuote": true,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["*.(ts|js|mjs)"],
      "options": {
        "printWidth": 120
      }
    }
  ],
  "plugins": ["prettier-plugin-astro"]
}
