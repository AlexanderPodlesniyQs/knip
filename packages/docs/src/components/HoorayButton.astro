<style>
  div {
    display: none;
    justify-content: center;
  }

  button {
    color: var(--sl-color-text-accent);
    margin-top: 2rem;
    padding: 1rem;
    background-color: var(--sl-color-orange);
    border: 2px solid var(--sl-color-text-accent);
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.25rem;
  }

  button:hover {
    background-color: var(--sl-color-bright-orange);
  }
</style>

<div data-button-container>
  <button>Let's have an emoji blast!</button>
</div>

<script type="module" id="emoji-blasts">
  import { emojiBlasts } from 'https://unpkg.com/emoji-blast@0.10.1';
  const container = document.querySelector('[data-button-container]');
  const button = container.querySelector('button');
  const text = ['Let\'s have an emoji blast!', 'Please, declutter!'];
  if(emojiBlasts && button) {
    button.textContent = text[0];
    const cb = () => {
      button.textContent = text[1];
      const { cancel } = emojiBlasts({ emojis: ["✂️", "🚀", "❤️", "🎉", "🧡", "2️⃣"] });
      button.removeEventListener('click', cb);
      button.addEventListener('click', () => {
        cancel();
        button.textContent = text[0];
        button.addEventListener('click', cb);
      });
    };
    container.style.display = 'flex';
    button.addEventListener('click', cb);
  };
</script>
